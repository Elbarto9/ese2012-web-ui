%link(rel="stylesheet" type="text/css" href="/style.css")
%h1 Welcome #{user_name}
%a{:href => "/"} Home
%br/
%a{:href => "/logout"} Logout
%h2 User
%ul
  - for user in users
    - if user.name == name
      %li{:class => "selected"}
        #{user.name} (your item= #{user.list_of_all_items})
    - else
      %li{:class => nil} #{user.name}

%hr
Time: #{time.strftime("%H:%M:%S")}